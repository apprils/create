{
  "name": "@appril/create",
  "version": "0.2.3",
  "description": "Easily bootstrap Appril projects",
  "author": "Slee Woo",
  "license": "MIT",
  "engines": {
    "node": "20.10",
    "npm": "10.2"
  },
  "files": [
    "pkg/*"
  ],
  "bin": {
    "create": "pkg/index.js"
  },
  "scripts": {
    "// âœ¨ build": "",
    "prebuild": "rsync -av --delete --exclude '/*.ts' --exclude '/presets/*.ts' lib/ pkg",
    "build": "esbundler lib/index.ts --sourcemap=inline --outdir=pkg",
    "postbuild": "chmod +x pkg/index.js"
  },
  "release-it": {
    "hooks": {
      "before:init": [ "npm run build" ],
      "after:release": [ "mkdir -p var/pub", "npm pack --pack-destination var/pub" ]
    }
  },
  "dependencies": {
    "fs-extra": "^11.2.0",
    "merge": "^2.1.1",
    "mustache": "^4.2.0",
    "npm-check-updates": "^16.14.12",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@appril/core": "^0.2.7",
    "@appril/dbx": "^0.2.5",
    "@appril/dev": "^0.2.3",
    "@appril/more": "^0.2.5",
    "@appril/scripts": "^0.2.3",
    "@types/fs-extra": "^11.0.4",
    "@types/koa__router": "^12.0.4",
    "@types/mustache": "^4.2.5",
    "@types/node": "^20.10.6",
    "@types/prompts": "^2.4.9",
    "@types/qs": "^6.9.11",
    "esbuild": "^0.19.11",
    "pinia": "^2.1.7",
    "release-it": "^17.0.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vue-router": "^4.2.5"
  }
}
