{
  "name": "@appril/create",
  "version": "0.2.5",
  "description": "Easily bootstrap Appril projects",
  "author": "Slee Woo",
  "license": "MIT",
  "engines": {
    "node": "20.10",
    "npm": "10.2"
  },
  "files": [
    "pkg/*"
  ],
  "bin": {
    "create": "pkg/index.js"
  },
  "scripts": {
    "// âœ¨ build": "",
    "esbundler": "func() { e=$1; shift; esbuild $e --bundle --platform=node --target=node20 --packages=external --loader:.tpl=text $*; }; func",
    "prebuild": "rsync -av --delete --exclude '/*.ts' --exclude '/presets/*.ts' lib/ pkg",
    "build": "npm run esbundler -- lib/index.ts --sourcemap=inline --outdir=pkg",
    "postbuild": "chmod +x pkg/index.js"
  },
  "prettier": "@appril/prettier-config",
  "release-it": {
    "hooks": {
      "before:init": [
        "npm run build"
      ],
      "after:release": [
        "mkdir -p var/pub",
        "npm pack --pack-destination var/pub"
      ]
    }
  },
  "dependencies": {
    "fs-extra": "^11.2.0",
    "merge": "^2.1.1",
    "mustache": "^4.2.0",
    "npm-check-updates": "^16.14.12",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@appril/core": "^0.2.8",
    "@appril/dbx": "^0.2.6",
    "@appril/more": "^0.2.5",
    "@appril/prettier-config": "^0.2.2",
    "@appril/tsconfig": "^0.2.2",
    "@types/fs-extra": "^11.0.4",
    "@types/koa__router": "^12.0.4",
    "@types/mustache": "^4.2.5",
    "@types/node": "^20.11.5",
    "@types/nopt": "^3.0.32",
    "@types/prompts": "^2.4.9",
    "@types/qs": "^6.9.11",
    "esbuild": "^0.19.11",
    "pinia": "^2.1.7",
    "prettier": "^3.2.4",
    "release-it": "^17.0.1",
    "vite": "^5.0.12",
    "vue-router": "^4.2.5"
  }
}
