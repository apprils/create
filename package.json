{
  "name": "@appril/create",
  "version": "0.2.7",
  "description": "Easily bootstrap Appril projects",
  "author": "Slee Woo",
  "license": "MIT",
  "engines": {
    "node": ">=20.10",
    "npm": ">=10.2"
  },
  "files": [
    "pkg/*"
  ],
  "bin": {
    "create": "pkg/index.js"
  },
  "scripts": {
    "// ✨ linters": "",
    "lint": "biome lint ./lib",
    "// ✨ types": "",
    "tsc": "tsc --noEmit",
    "// ✨ builders": "",
    "esbuilder": "func() { e=$1; shift; esbuild lib/$e.ts --outfile=pkg/$e.js --bundle --platform=node --target=node20 --packages=external --loader:.tpl=text --sourcemap=inline $*; }; func",
    "// ✨ build": "",
    "prebuild": "rsync -av --delete --exclude '/*.ts' --exclude '/presets/*.ts' lib/ pkg",
    "build": "set -e; npm run lint; npm run tsc; npm run esbuilder index",
    "postbuild": "chmod +x pkg/index.js"
  },
  "release-it": {
    "hooks": {
      "before:init": [
        "npm run build"
      ]
    }
  },
  "dependencies": {
    "fs-extra": "^11.2.0",
    "merge": "^2.1.1",
    "mustache": "^4.2.0",
    "npm-check-updates": "^16.14.15",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@appril/core": "^0.2.12",
    "@appril/dbx": "^0.2.10",
    "@appril/more": "^0.2.8",
    "@appril/tsconfig": "^0.2.5",
    "@biomejs/biome": "^1.5.3",
    "@types/fs-extra": "^11.0.4",
    "@types/koa__router": "^12.0.4",
    "@types/mustache": "^4.2.5",
    "@types/node": "^20.11.25",
    "@types/nopt": "^3.0.32",
    "@types/prompts": "^2.4.9",
    "@types/qs": "^6.9.12",
    "esbuild": "^0.20.1",
    "pinia": "^2.1.7",
    "release-it": "^17.1.1",
    "vite": "^5.1.5",
    "vue-router": "^4.3.0"
  }
}
